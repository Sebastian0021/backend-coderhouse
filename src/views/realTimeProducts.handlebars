<h1 class="text-4xl font-bold text-white text-center my-8">Real Time Productos</h1>
<form
  id="form"
  class="w-full max-w-lg mx-auto bg-gray-800 rounded-lg border border-gray-700 shadow-md p-8"
>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label
        class="block uppercase tracking-wide text-white text-xs font-bold mb-2"
        for="title"
      >
        Título
      </label>
      <input
        class="appearance-none block w-full bg-gray-700 text-white border border-gray-600 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-gray-600"
        id="title"
        type="text"
        name="title"
        required
      />
    </div>
    <div class="w-full md:w-1/2 px-3">
      <label
        class="block uppercase tracking-wide text-white text-xs font-bold mb-2"
        for="price"
      >
        Precio
      </label>
      <input
        class="appearance-none block w-full bg-gray-700 text-white border border-gray-600 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-gray-600"
        id="price"
        type="number"
        name="price"
        required
      />
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label
        class="block uppercase tracking-wide text-white text-xs font-bold mb-2"
        for="description"
      >
        Descripción
      </label>
      <textarea
        class="appearance-none block w-full bg-gray-700 text-white border border-gray-600 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-gray-600"
        id="description"
        name="description"
        required
      ></textarea>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <label
        class="block uppercase tracking-wide text-white text-xs font-bold mb-2"
        for="code"
      >
        Código
      </label>
      <input
        class="appearance-none block w-full bg-gray-700 text-white border border-gray-600 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-gray-600"
        id="code"
        type="text"
        name="code"
        required
      />
    </div>
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <label
        class="block uppercase tracking-wide text-white text-xs font-bold mb-2"
        for="stock"
      >
        Stock
      </label>
      <input
        class="appearance-none block w-full bg-gray-700 text-white border border-gray-600 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-gray-600"
        id="stock"
        type="number"
        name="stock"
        required
      />
    </div>
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <label
        class="block uppercase tracking-wide text-white text-xs font-bold mb-2"
        for="category"
      >
        Categoría
      </label>
      <input
        class="appearance-none block w-full bg-gray-700 text-white border border-gray-600 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-gray-600"
        id="category"
        type="text"
        name="category"
        required
      />
    </div>
  </div>
  <button
    class="bg-blue-600 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
    type="submit"
  >Agregar</button>
</form>
<form
  id="deleteForm"
  class="w-full max-w-lg mx-auto bg-gray-800 rounded-lg border border-gray-700 shadow-md p-8 mt-8"
>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label
        class="block uppercase tracking-wide text-white text-xs font-bold mb-2"
        for="productId"
      >
        Product ID
      </label>
      <input
        class="appearance-none block w-full bg-gray-700 text-white border border-gray-600 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-gray-600"
        id="productId"
        type="text"
        name="productId"
        required
      />
    </div>
  </div>
  <button
    class="bg-red-600 hover:bg-red-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
    type="submit"
  >Eliminar</button>
</form>
<div
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 bg-gray-900"
  id="products"
>
  {{#each products}}
    <div
      class="m-4 p-6 max-w-sm bg-gray-800 rounded-lg border border-gray-700 shadow-md"
    >
      <h5 class="text-xl font-bold text-white">{{this.title}}</h5>
      <p class="mt-2 text-gray-400">{{this.description}}</p>
      <p class="mt-2 text-gray-400">Código: {{this.code}}</p>
      <p class="mt-2 text-gray-400">Precio: {{this.price}}</p>
      <p class="mt-2 text-gray-400">Estado:
        {{#if this.status}}Disponible{{else}}Agotado{{/if}}</p>
      <p class="mt-2 text-gray-400">Stock: {{this.stock}}</p>
      <p class="mt-2 text-gray-400">Categoría: {{this.category}}</p>
    </div>
  {{/each}}
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js">
</script>