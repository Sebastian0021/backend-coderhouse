<h1 class="text-3xl font-bold text-white text-center">Productos</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 bg-gray-900">
  {{#each products}}
    <div
      class="m-4 p-6 max-w-sm bg-gray-800 rounded-lg border border-gray-700 shadow-md"
    >
      <h5 class="text-xl font-bold text-white">{{this.title}}</h5>
      <p class="mt-2 text-gray-400">{{this.description}}</p>
      <p class="mt-2 text-gray-400">Código: {{this.code}}</p>
      <p class="mt-2 text-gray-400">Precio: {{this.price}}</p>
      <p class="mt-2 text-gray-400">Estado:
        {{#if this.status}}Disponible{{else}}Agotado{{/if}}</p>
      <p class="mt-2 text-gray-400">Stock: {{this.stock}}</p>
      <p class="mt-2 text-gray-400">Categoría: {{this.category}}</p>
    </div>
  {{/each}}
</div>